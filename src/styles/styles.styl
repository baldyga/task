*
  margin: 0
  padding: 0
  box-sizing: border-box

$basicColor = gray

body
  background-color:#5f9ea0
  font-family: Arial, Helvetica, sans-serif

header
  background-color: #fff
  width: 100vw  

img 
  width: 35vw

h1 
  color: #fff
  text-align: center
  font-size: 1.5rem
  margin-top: 5%

section 
  display: flex
  margin: 2% 10% 2% 10%
  flex-flow: row wrap
  justify-content: center

article 
  position relative
  border: 1px solid $basicColor
  box-shadow: 2px 2px #e8e7e4
  background-color: #fff
  padding: 15px
  margin: 3px
  flex-basis: 90%
  height 40vh

h2
h3
  font-size: 14px
  color: $basicColor
h3 
  margin-left: 68%;

h4 
  text-align: center
  padding: 40px 5px 5px 5px
  line-height: 1.5
a 
  background-color: red
  color: #fff
  padding: 5px
  position: absolute
  bottom: 20px
  right 20px
  cursor pointer
a
a:hover 
  text-decoration: none

a:hover 
  background-color:#E8024F

@media (min-width: 992px) 
  article 
    flex-basis: 30%
  img 
    width: 15vw

