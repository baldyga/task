*
  margin: 0
  padding: 0
  box-sizing: border-box

$basicColor = gray

body
  background #fff
  font-family: Arial, Helvetica, sans-serif

header
  background-color: #000
  width: 100vw  
  padding: 10px

h1
input 
  margin-left: 13.5%

h1 
  font-size: 1rem
  margin-top: 5%

input 
  width: 40%
  margin-top: .5%
  padding: 5px

section 
  display: flex
  margin: 2% 10% 2% 10%
  flex-flow: row wrap
  justify-content: center

article 
  border: 1px solid $basicColor
  box-shadow: 2px 2px #e8e7e4
  padding: 15px
  margin: 3px
  flex-basis: 30%
  height 40vh

h2
h3
  font-size: 14px
  color: $basicColor

button 
  background-color: red
  color: #fff
  padding: 5px
  margin-left: 73%

